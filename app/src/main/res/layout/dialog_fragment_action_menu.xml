<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:elevation="8dp"
    android:layout_margin="5dp"
    >
    <!--android:layout_marginHorizontal="8dp"
    android:background="@drawable/background_dialog_fragment_action_menu">-->

    <TextView
        android:id="@+id/tv_action_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WMSLite"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/iv_action_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btn_action_dialog_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="Настройки"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_action_dialog_title" />

    <Button
        android:id="@+id/btn_action_dialog_exit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="?attr/colorAccent"
        android:text="Выход"
        app:layout_constraintEnd_toEndOf="@+id/btn_action_dialog_settings"
        app:layout_constraintStart_toStartOf="@+id/btn_action_dialog_settings"
        app:layout_constraintTop_toBottomOf="@id/btn_action_dialog_settings" />

</androidx.constraintlayout.widget.ConstraintLayout>